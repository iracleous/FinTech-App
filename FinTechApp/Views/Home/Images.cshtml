@{
}
@model List<ImageTemplate>

<style>
    #imageData td, th {
        border: 1px solid black;
        padding:6px;
    }

</style>

<h1> Images in database</h1>
@foreach( var item in Model)
{
   <div id="item-div">

        <img src="/images/@item.FileName" width="100px" height="100px" /><br />
        <table id="imageData">
            <tr><th>Id</th><th>FileName</th><th>Description</th><th>CreatedDate</th></tr>
            <tr><td>@item.Id </td><td> @item.FileName.Substring(1,5)</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                </tr>
           </table>
     </div>
    <br />
    <hr />
    <br />
}
